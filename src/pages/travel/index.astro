---
import ListCategories from '@/components/ListCategories'
import ListPosts from '@/components/ListPosts'
import TitlePage from '@/components/TitlePage'
import BaseLayout from '@/layouts/BaseLayout'
import { getPosts } from '@/utils'

const MAX_POSTS = 5 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)
---

<BaseLayout title='Fun'>
  <div class="gallery-container">
    <div class="gallery-item">
      <img src="https://via.placeholder.com/300x200" alt="Travel Location 1">
      <div class="gallery-caption">Beautiful Sunset at Location 1</div>
    </div>
    <div class="gallery-item">
      <img src="https://via.placeholder.com/300x200" alt="Travel Location 2">
      <div class="gallery-caption">Mountain Hike in Location 2</div>
    </div>
    <div class="gallery-item">
      <img src="https://via.placeholder.com/300x200" alt="Travel Location 3">
      <div class="gallery-caption">City Lights at Location 3</div>
    </div>
    <div class="gallery-item">
      <img src="https://via.placeholder.com/300x200" alt="Travel Location 4">
      <div class="gallery-caption">Beach Walk at Location 4</div>
    </div>
  </div>
  <!--<div class="coming-soon">
    <div class="content-com">
      <h1>Coming Soon</h1>
    </div>
  </div>-->

  <style>
    .coming-soon {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: linear-gradient(135deg, #f3f4f6, #dce3e6);
      color: #333;
      text-align: center;
      font-family: Arial, sans-serif;
    }
    .content-cm {
      max-width: 600px;
      padding: 20px;
      background: #ffffff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .gallery-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
      padding: 20px;
      height: 100vh;
      color: #333;
      font-family: Arial, sans-serif;
    }
    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .gallery-item img {
      width: 100%;
      height: auto;
      display: block;
      transition: transform 0.3s ease;
    }
    .gallery-item:hover img {
      transform: scale(1.1);
    }
    .gallery-caption {
      position: absolute;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      width: 100%;
      padding: 10px;
      text-align: center;
      font-size: 1em;
      transition: opacity 0.3s ease;
      opacity: 0;
    }
    .gallery-item:hover .gallery-caption {
      opacity: 1;
    }
  </style>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
